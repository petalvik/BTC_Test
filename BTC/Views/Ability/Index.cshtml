@model IEnumerable<BTC.ViewModels.AbilityViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Способности героя</h2>

<p>
    @Html.ActionLink("Создать новую", "Create")
</p>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Изображение</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw("<pre>" + item.Description + "</pre>")
            </td>
            <td>
                <img src='@Url.Action("ShowImage", new { id = item.Id })' />
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробно", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
